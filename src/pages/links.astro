---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTAButton from '../components/CTAButton.astro';
import { breadcrumbSchema } from '../lib/schema';

const links = [
  { label: 'LINE公式アカウント', href: 'https://lin.ee/IfZbpy5', description: '体験予約や日程調整はこちらから。' },
  { label: 'Instagram', href: 'https://www.instagram.com/on_study_line/', description: 'Cosmos Partyや授業の様子を更新。' },
  { label: 'YouTube', href: 'https://www.youtube.com/@MA-ys9rc', description: 'ワンフレーズ報告や探究発表のダイジェストを公開。' },
];

const structuredData = [
  breadcrumbSchema([
    { name: 'ホーム', item: 'https://mittyan-star.github.io/kyoshitsu/' },
    { name: 'リンク集', item: 'https://mittyan-star.github.io/kyoshitsu/links' },
  ]),
  {
    '@context': 'https://schema.org',
    '@type': 'ItemList',
    name: '公式リンク集',
    itemListElement: links.map((link, index) => ({
      '@type': 'ListItem',
      position: index + 1,
      name: link.label,
      url: link.href,
      description: link.description,
    })),
  },
];
---
<BaseLayout
  title="リンク集｜SNS・フォームまとめ"
  description="みっちゃん塾の公式リンク集。LINE、Instagram、YouTubeなどの導線をまとめています。"
  path="/links"
  summary="LINE・Instagram・YouTubeなど、みっちゃん塾の公式チャネルをまとめました。"
  breadcrumbs={[{ href: '/links', label: 'リンク集' }]}
  structuredData={structuredData}
>
  <section class="section">
    <h1 class="text-3xl font-bold text-slate-900">公式チャネル</h1>
    <div class="space-y-4">
      {links.map((link) => (
        <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
          <h2 class="text-lg font-semibold text-blue-700">{link.label}</h2>
          <p class="mt-1 text-sm text-slate-600">{link.description}</p>
          <div class="mt-3">
            <CTAButton href={link.href} label={`${link.label}を開く`} />
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
