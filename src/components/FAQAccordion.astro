---
const { items } = Astro.props as {
  items: { question: string; answer: string }[];
};
---
<section class="section">
  <h2>よくある質問</h2>
  <div class="space-y-3">
    {items.map((item) => (
      <details class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
        <summary class="cursor-pointer text-base font-semibold text-slate-800">
          {item.question}
        </summary>
        <p class="mt-2 text-sm leading-relaxed text-slate-600">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
